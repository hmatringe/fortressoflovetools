<%= simple_form_for [@order, @order_line] do |ol| %>
  <%= ol.association :product, label_method: :select_label,include_blank: false %>
  <%= ol.input :qtty, label: 'Quantity' %>
  <%= ol.input :production_cost_per_unit_invoice_currency, label: 'Cost per unit in the invoice currency' %>
  <%= ol.input :production_cost_per_unit_accounting_currency, label: 'Cost per unit in your accounting currency' %>
  <%= ol.button :submit, 'Add a product' %>
<% end %>
