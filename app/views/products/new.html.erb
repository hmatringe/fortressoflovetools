<%= render partial: "shared/subnavigation", locals: { current: :products} %>

<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
			<h1>New Product</h1>
			<%= simple_form_for @product do |pod| %>
				<%= pod.input :name %>
				<%= pod.input :SKU %>
				<%= pod.input :parentSKU %>
				<%= pod.input :size %>
				<%= pod.input :color %>
				<%= pod.input :structure %>
				<%= pod.input :category %>
				<%= pod.association :supplier %>
				<%= pod.button :submit, class: "cogs_btn" %>
			<% end %>
    </div>
  </div>
</div>