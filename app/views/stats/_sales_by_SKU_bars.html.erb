<script type="text/javascript">
  google.charts.load('current', {'packages':['corechart', 'bar']});
  google.charts.setOnLoadCallback(drawChart_sales_by_SKU_bars);

  
  function drawChart_sales_by_SKU_bars() {

    // var data = google.visualization.arrayToDataTable([
    //     ['SKU', 'sales'],
    //     ['SKU_A', 1000],
    //     ['SKU_B', 2000],
    //     ['SKU_C', 1500]
    //   ]);
    var data = google.visualization.arrayToDataTable(<%= raw @sales_by_SKU_bars.to_json %>);
  

    // Set chart options
    var title = <%= raw @sales_by_SKU_bars_title.to_json %>
    var options = {
        title: title,
        chartArea: {width: '50%'},
        hAxis: {
          title: 'Total Sales',
          minValue: 0
        },
        vAxis: {
          title: 'SKU'
        }
      };


    // Instantiate and draw our chart, passing in some options.
    var chart = new google.visualization.BarChart(document.getElementById('chart_sales_by_SKU_bars'));
    chart.draw(data, options);
  }
</script>